{
  "manifest_version": 2,

  "name": "OneTimeSecret Chrome Plugin",
  "description": "This extension will use OneTimeSecret.com API to generate crypted text",
  "version": "1.0",

  "browser_action": {
   "default_icon": "img/icon.png",
   "default_popup": "popup.html",
   "default_title": "OneTimeSecret Generator"
  },
  "permissions": [
   "storage",
   "https://onetimesecret.com/api/v1/"
   ]
}